package ar.edu.ottokrause.psr;
public class Point {

    private double x = 0.0;
    private double y = 0.0;
    
    public Point() { //Crea un punto con sus coordenadas en (0.0)
        this(0.0);
    }
    
    public Point(double x, double y) { //Crea un punto con sus coordenadas
        this.x = x;
        this.y = y;
    }
    
    public double getX() { //Obtiene la posicion en X
        return this.x;
    }
    
    public double getY() { //Obtiene la posicion en Y
        return this.y;
    }
    
    public void add(Point aPoint) { //Devuelve un nuevo punto que es la suma de las coordenadas de this con las coordenadas de aPoint
        this.x += aPointn.getX();
        this.y += aPointn.getY()
    }
    
    @Override
    public String toString() {
        return "posicion en x =" + this.getX() + ", posicion en y =" + this.getY();
    }
}
